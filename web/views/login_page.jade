include layout.jade

    form(class="form-inline" action="/" method="post")
        div(class="form-group")
            label(
              for="userEmail"
            ) Email
            input(
              type="email"
              class="form-control"
              id="userEmail"
              name="email"
              placeholder="Email"
            )
        div(class="form-group")
            label(
              for="userPassword"
            ) Password
            input(
              type="password"
              class="form-control"
              id="userPassword"
              name="password"
              placeholder="Password"
            )
        button(type="submit", class="btn btn-default pp-btn") Log In
